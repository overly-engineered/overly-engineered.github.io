html
	head
		link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/css/materialize.min.css")
		link(rel="stylesheet" href="style.css")
		link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
		title Angular
		base(href="/work/angular/")
	body
		#main(ng-app="fBookApp")
			nav.light-blue(ng-controller="profileController" role="navigation")
				.nav-wrapper
					a#logo-container
						span.brand-logo FBook
					a.button-collapse(href="#" data-activates="mobileM")
						i.material-icons menu
					ul.user.right.hide-on-med-and-down
						li.name
							a(ng-href="/work/angular/#!users/{{currentUser.url}}") {{currentUser.name}}
						li.add
							a.modal-trigger( href="#addUserModal") Add user
					ul.side-nav#mobileM
						li.name
							a(ng-href="/work/angular/#!users/{{currentUser.url}}") {{currentUser.name}}
						li.add
							a.modal-trigger(href="#addUserModal") Add user
					#addUserModal.modal.bottom-sheet
						.modal-content.black-text
							h5.blue-text Add user
							form#newUser(ng-submit="addUser()" name="addUserForm")
								input(type="text" id="new_name" ng-model="addUserName" required)
								label(for="new_name") Name
								label(for="dob") D.O.B
								input(type="date" class="datepicker" id="dob" ng-model="addUserDOB")
								input(type="text" id="new_PM" required ng-model="addUserPM")
								label(for="new_PM") Personal Message
								button(type="submit" class="btn waves-effect waves-light" style="padding-bottom:5px;" ng-disabled="addUserForm.$invalid") Add user
									i.material-icons.right done

			.container(ng-view)
		footer.page-footer.light-blue
			a(href="/work" class="white-text" title="Back to my main site") Back to my site
				
		script(src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.14/angular.min.js")
		script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0rc1/angular-route.min.js")
		script(src="http://code.angularjs.org/1.0.7/angular-resource.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.4/angular-cookies.js")
		script(src="https://cdn.firebase.com/js/client/2.2.4/firebase.js")
		script(src="https://cdn.firebase.com/libs/angularfire/1.1.4/angularfire.min.js")
		script(src="https://code.jquery.com/jquery-2.1.1.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/js/materialize.min.js")
		script(src="scripts.js")